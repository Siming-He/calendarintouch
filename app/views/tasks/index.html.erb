<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duedate</th>
      <th>Description</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.duedate %></td>
        <td><%= task.description %></td>
        <td><%= task.subject.name %></td>
        <td><%= link_to 'Show Subject', [@subject] %></td>
        <td><%= link_to 'Edit Task', edit_subject_task_path(@subject, task) %></td>
        <td><%= link_to 'Destroy Task', [@subject, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_subject_task_path(@subject) %>
