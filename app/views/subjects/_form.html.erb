<%= simple_form_for(@subject) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  
  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.file_field :syllabus %>
  </div>

  <div class="form-inputs">
      <%= f.input :private, label: 'set private' %>
  </div>

  <h3>Tasks</h3>

  <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>Task Name</th>
        <th>Due Date</th>
        <th>Workload(hr)</th>
      </tr>
    </thead>
    <tbody class='tasks'>
      <%= f.simple_fields_for :tasks do |task| %>
        <%= render 'task_fields', f: task %>
      <% end %>
    </tbody>

  </table>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', style: 'margin-right: 20px;' %>
    <%= link_to_add_association 'Add Task', f, :tasks, class: 'btn btn-primary', data: { association_insertion_node: '.tasks', association_insertion_method: :append } %>
  </div>
<% end %>
